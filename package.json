{
  "name": "donis-homepage",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "trap 'rm -rf public/assets/projects/*' INT; next dev",
    "predev": "rm -rf public/assets/projects/* && mkdir -p public/assets/projects && for dir in projects/*/; do folder=$(basename \"$dir\"); mkdir -p \"public/assets/projects/$folder\"; find \"$dir\" -maxdepth 1 \\( -name '*.jpg' -o -name '*.png' -o -name '*.gif' -o -name '*.webp' \\) -exec cp {} \"public/assets/projects/$folder/\" \\;; done",
    "build": "next build",
    "postbuild": "rm -rf out/assets/projects/* && mkdir -p out/assets/projects && for dir in projects/*/; do folder=$(basename \"$dir\"); mkdir -p \"out/assets/projects/$folder\"; find \"$dir\" -maxdepth 1 \\( -name '*.jpg' -o -name '*.png' -o -name '*.gif' -o -name '*.webp' \\) -exec cp {} \"out/assets/projects/$folder/\" \\;; done",
    "start": "next start",
    "lint": "eslint",
    "thumb": "bash .tools/create-thumbnails.sh",
    "image-prep": "bash .tools/prep-images.sh && bash .tools/create-thumbnails.sh"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.0.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@types/mdx": "^2.0.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.554.0",
    "motion": "^12.23.24",
    "next": "16.0.7",
    "next-mdx-remote-client": "^2.1.7",
    "next-themes": "^0.4.6",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.4.0",
    "use-sound": "^5.0.0",
    "usehooks-ts": "^3.1.1",
    "vaul": "^1.1.2",
    "yet-another-react-lightbox": "^3.25.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "baseline-browser-mapping": "2.9.0-beta2",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}